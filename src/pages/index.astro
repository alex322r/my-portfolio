<script>
	let initialText = "";
	const message =
		"Hello, I'm Alexis Rodriguez. I'm a software developer and a designer. I'm currently working on a new portfolio. Stay tuned!";

	const writeMessage = () => {
		if (initialText.length < message.length) {
			initialText += message.charAt(initialText.length);
			let text = document.getElementById(
				"message",
			) as HTMLParagraphElement;
			text.innerHTML = initialText;
			setTimeout(writeMessage, 50);
		}
	};

	window.onload = () => {
		writeMessage();
	};
</script>

