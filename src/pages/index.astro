	.glow {
		text-shadow: 0 0 5px hsl(154, 84%, 70%);
		animation-duration: 1s;
		animation-name: textShadow;
		animation-iteration-count: infinite;
		animation-direction: alternate;
	}

	.wave {
		animation: wave 10s infinite ease-in-out;
		content: "";
		height: 10vh;
		left: 0;
		opacity: 0.5;
		position: absolute;
		right: 0;
		z-index: 1;
	}

	.wave-wrapper {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;

		overflow: hidden;
		z-index: -1;
	}
	#glare {
		position: fixed;
		inset: 0;
		z-index: -1;
		background: radial-gradient(
			hsl(154 5% 15%) 0%,
			hsl(154deg 35.34% 12.9%) 70%
		);
	}

	#text {
		background: repeating-linear-gradient(
			transparent 0px 3px,
			hsl(154 0% 0%/0) 3px 4px
		);
		z-index: 1;
		position: fixed;
		inset: 0;
		pointer-events: none;
	}
	#interlaced {
		position: fixed;
		background: repeating-linear-gradient(
			transparent 0px 1px,
			hsl(154 0% 0%/0.2) 3px 4px
		);
		inset: 0;
		z-index: 1;
		pointer-events: none;
	}
